{
  "openapi": "3.0.1",
  "info": {
    "title": "Finances",
    "version": "1.0"
  },
  "paths": {
    "/api/transactions": {
      "post": {
        "tags": [
          "Transactions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PaymentMethod": {
        "enum": [
          "Cash",
          "CreditCard",
          "DebitCard",
          "BankTransfer",
          "PIX",
          "Other"
        ],
        "type": "string"
      },
      "Transaction": {
        "required": [
          "amount",
          "category",
          "date"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "description": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "category": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "method": {
            "$ref": "#/components/schemas/PaymentMethod"
          },
          "type": {
            "$ref": "#/components/schemas/TransactionType"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TransactionType": {
        "enum": [
          "Income",
          "Expense"
        ],
        "type": "string"
      }
    }
  }
}